<div class= '_form_new mt-5'>
  <h1>Add a recipe to  <%= @category.name %> category</h1>

  <%= simple_form_for [@category, @bookmark] do |f| %>
    <%= f.association :recipe, collection: @recipes, prompt: "Select a recipe" %>
    <%= f.input :comment, placeholder: "Type in your comment" %>
    <%= f.submit "Add recipe", class: "btn btn-primary" %>
  <% end %>

  <%= link_to " Back to #{@category.name}", category_path(@category), class: "btn btn-info" %>
</div>
